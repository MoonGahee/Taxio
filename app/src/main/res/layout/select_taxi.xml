<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/abar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        style="@style/back">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/title"/>
    </androidx.appcompat.widget.Toolbar> <!--툴바-->

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/abar"
        android:text="일정 선택"
        style="@style/title1"/>

    <TextView
        android:id="@+id/select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="날짜별 택시 탑승 시간과 코스 방법을\n정확하게 선택해주세요"
        style="@style/title2"/>

    <TextView
        android:id="@+id/warn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/select"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"
        android:text="유의 사항\n-  택시의 탑승 시간은 4, 8, 12 중에 선택이 가능합니다.\n-  4, 8시간의 경우 최대 1회의 식사, 12시간의 경우에는\n   최대 2회의 식사 시간이 포함됩니다."
        style="@style/attention"/>

    <TextView
        android:id="@+id/rent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/start"
        app:layout_constraintTop_toBottomOf="@+id/warn"
        android:layout_marginTop="48dp"
        android:layout_marginRight="84dp"
        style="@style/basic"
        android:text="대여시간"
/>

    <TextView
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/warn"
        android:layout_marginTop="48dp"
        android:layout_marginRight="68dp"
        style="@style/basic"
        android:text="출발시간"
 />

    <TextView
        android:id="@+id/taxi_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rent"/>

    <Spinner
        android:id="@+id/rent_spin"
        style="@style/basic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="124dp"
        android:layout_marginTop="16dp"
        android:entries="@array/rent"
        app:layout_constraintLeft_toRightOf="@+id/taxi_day"
        app:layout_constraintTop_toBottomOf="@+id/rent" />//background -> 버튼 투명하게, stateListAnimation -> 그림자 없애기



    <Button
        android:id="@+id/start_btn"
        style="@style/basic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="56dp"
        android:background="#00FFFFFF"
        android:stateListAnimator="@null"
        android:text="선택"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start" />

    <Button
        android:id="@+id/ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="확인"
        style="@style/basic"
        android:layout_margin="30dp"
        android:background="@color/tButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>